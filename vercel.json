{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "VERCEL": "1"
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1",
      "headers": {
        "cache-control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ]
}
